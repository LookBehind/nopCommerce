@model CatalogProductsModel

@if (!string.IsNullOrEmpty(Model.WarningMessage))
{
    <div class="warning">
        @Model.WarningMessage
    </div>
}

@if (Model.Products.Count > 0)
{
    <div class="@(Model.ViewMode == "list" ? "product-list" : "product-grid")">
        <div class="item-grid">
            @foreach (var product in Model.Products)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", product)
                </div>
            }
            <div class="pager" hidden>
                @Html.Pager(Model).QueryParam("pagenumber")
            </div>
        </div>
    </div>

    <script>
        var viewModeClass = '.@(Model.ViewMode == "list" ? "product-list" : "product-grid")';
        $(viewModeClass).jscroll({
            loadingHtml: '<small>Loading...</small>',
            padding: 200,
            debug: true,
            autoTrigger: true,
            autoTriggerUntil: 100,
            nextSelector: 'li.next-page a',
            contentSelector: viewModeClass
        });
    </script>
}
else if (!string.IsNullOrEmpty(Model.NoResultMessage))
{
    <div class="no-result">
        @Model.NoResultMessage
    </div>
}