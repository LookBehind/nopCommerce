@model PushNotificationModel

@inject AdminAreaSettings adminAreaSettings

@{
    //page title
    ViewBag.PageTitle = T("Admin.PushNotifcation.PushNotifcations.SendNotification").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Push Notifcation");
}

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="card-body">
                <form asp-controller="PushNotification" asp-action="SendNotification" method="post">
                    <div class="content-header clearfix">
                        <h1>
                            @T("Admin.PushNotification.SendAll")
                        </h1>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="MessageTitle" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="MessageTitle" />
                            <span asp-validation-for="MessageTitle"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="MessageBody" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="MessageBody" />
                            <span asp-validation-for="MessageBody"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-3 col-md-9">
                            <button type="submit" name="save" class="btn btn-primary">
                                <i class="far fa-save"></i>
                                @T("Admin.Common.Send")
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
