@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("Plugins.Payments.Idram.PageTitle.Fail").Text);
    //page class
    Html.AppendPageCssClassParts("html-checkout-page");
    Html.AppendPageCssClassParts("html-order-completed-page");
}
<div class="page checkout-page order-completed-page">
    <div class="page-title">
        <h1>@T("Plugins.Payments.Idram.Checkout.Fail")</h1>
    </div>
    <div class="page-body checkout-data">
        <div class="section order-completed">
            <div class="title">
                <strong>@T("Plugins.Payments.Idram.Checkout.YourPaymentHasBeenFailed")</strong>
            </div>
            <div class="buttons">
                <button type="button" class="button-1 order-completed-continue-button" onclick="setLocation('@Url.RouteUrl("Checkout")')">@T("Plugins.Payments.Idram.Checkout.Error.Continue")</button>
            </div>
        </div>
    </div>
</div>
