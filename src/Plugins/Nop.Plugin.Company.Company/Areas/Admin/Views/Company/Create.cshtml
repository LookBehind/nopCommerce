@using Nop.Plugin.Company.Company.Areas.Admin.Models
@model CompanyModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.Company.Companies.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Companies");
}

<form asp-controller="Company" asp-action="Create" method="post" id="company-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Company.Companies.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Company.Companies.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>