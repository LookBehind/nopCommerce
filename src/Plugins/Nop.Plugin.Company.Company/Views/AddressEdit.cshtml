@model CompanyAddressModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Customers.Customers.Addresses.EditAddress").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Companies");
}

<form asp-controller="Company" asp-action="AddressEdit" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Customers.Customers.Addresses.EditAddress")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.CompanyId">@T("Admin.Common.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" class="btn btn-primary">
                @T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.CustomerAddressDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Company.Company/Views/_CreateOrUpdateAddress.cshtml", Model)
</form>
